<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

<LinearLayout android:id="@+id/layout_android_robots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/image_button_android_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/show_more_android_robots"/>

    <LinearLayout
        android:id="@+id/layout_android_images_robots"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:contentDescription="@string/now_showing_robots"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_android_robot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/android_robot"/>

        <ImageView
            android:id="@+id/image_view_android_robot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/android_robot"/>

        <ImageView
            android:id="@+id/image_view_android_robot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/android_robot"/>

        <ImageView
            android:id="@+id/image_view_android_robot_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/android_robot"/>

    </LinearLayout>
</LinearLayout>

    <TextView
        android:id="@+id/text_view_clickable"
        android:layout_below="@id/layout_android_robots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/clickable_text_view"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_clickable"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/clickable_button"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_toggle_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_clickable"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/toggle_visibility"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_toggle_visibility"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:text="@string/hidden_text"
        android:textSize="20sp" />

</RelativeLayout>
